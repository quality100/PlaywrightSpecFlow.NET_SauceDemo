pipeline{
    agent{
        docker{
            image 'mcr.microsoft.com/playwright/dotnet:v1.25.0-focal'
        }     
    }
    stages{
        stage('install playwright'){
            steps{
                dotnet build --runtime ubuntu.20.04-x64
            }
        }
        stage('Tests Run'){
             steps{
              sh 'dotnet Test' 
            }
        }
    }
}